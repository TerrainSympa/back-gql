{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "lib": ["dom", "es2021", "esnext.asynciterable"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "baseUrl": "./src",
  "paths": {
      "@res/*": ["resolvers/*"],
      "@entity/*": ["entity/*"]
  },
  "files": [
    "src/native.extension.ts"
  ]
}
